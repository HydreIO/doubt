{
	"name": "@hydre/doubt",
	"version": "4.0.2",
	"description": "Testing made right",
	"main": "src/index.js",
	"type": "module",
	"bin": {
		"doubt": "src/cli.js"
	},
	"scripts": {
		"test": "node test/index.js",
		"format": "prettier-eslint $PWD/\"**/*.js\" --write",
